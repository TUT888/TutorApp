<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeColor="@color/primary_color"
    app:strokeWidth="2dip"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/className"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Tên khóa học"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_gravity="center_vertical"/>

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Gia sư: "
                android:textColor="@color/primary_color"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/classTutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textColor="@color/text_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/mediumSpace">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Ngày bắt đầu: "
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/classStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05/11/2020"
                    android:textColor="@color/text_color"
                    android:justificationMode="inter_word"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Ngày kết thúc: "
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/classEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05/02/2021"
                    android:textColor="@color/text_color"
                    android:justificationMode="inter_word"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Lĩnh vực: "
                android:textColor="@color/primary_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/classField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Công nghệ thông tin"
                android:textColor="@color/text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Môn học: "
                android:textColor="@color/primary_color"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/classSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Môn Toán"
                android:textColor="@color/text_color"
                android:justificationMode="inter_word"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Địa điểm: "
                android:textColor="@color/primary_color"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/classPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 đường Tôn Đức Thắng, phường 1, quận 1, TP.HCM"
                android:textColor="@color/text_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Thời gian: "
                android:textColor="@color/primary_color"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/classTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6h-11h, T2-T6"
                android:textColor="@color/text_color"
                android:justificationMode="inter_word"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Học phí: "
                android:textColor="@color/primary_color"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/classFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250.000 VNĐ"
                android:textColor="@color/text_color"
                android:justificationMode="inter_word"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/mediumSpace">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Phương thức học: "
                android:textColor="@color/primary_color"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/classMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online"
                android:textColor="@color/text_color"
                android:justificationMode="inter_word"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/primary_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnAccept"
                android:text="Xác nhận"
                android:backgroundTint="@color/text_color"
                android:layout_marginEnd="@dimen/mediumSpace"
                android:textColor="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnReject"
                android:text="Từ chối"
                android:backgroundTint="@color/cancel"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>