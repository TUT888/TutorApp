<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeColor="@color/primary_color"
    app:strokeWidth="2dip"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rateClassName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên khóa học"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:textSize="25sp"/>
            <LinearLayout
                android:id="@+id/rateStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="5dp">
                <RatingBar
                    android:id="@+id/ratedBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/star_color"
                    android:numStars="5"
                    android:progressTint="@color/star_color"
                    android:rating="0"
                    android:secondaryProgressTint="@android:color/transparent"
                    android:stepSize="0.5"
                    android:isIndicator="false"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"/>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Gia sư: "
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/rateTutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textColor="@color/text_color"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Đánh giá: "
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/rateStarNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 sao"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                android:drawableRight="@drawable/ic_rating_full_star"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Bình luận: "
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/rateCmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                android:textColor="@color/text_color"
                android:justificationMode="inter_word"
                android:textSize="18sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/rateDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05/11/2020"
            android:justificationMode="inter_word"
            android:layout_gravity="right"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>